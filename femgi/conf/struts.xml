<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.custom.i18n.resources" value="application" />
    <constant name="struts.action.extension" value="jspx" />
	<constant name="struts.devMode" value="true" />

	<package name="/app/open" extends="struts-default">

		<result-types>
			<result-type name="tiles"
			class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>

		<action name="login" class="pt.ual.mgi.action.HomeAction">
			<result name="success" type="tiles">login</result>
		</action>
		
		<action name="forgotPwd" method="forgotPwd" class="pt.ual.mgi.action.UserProfileAction">
			<result name="success" type="tiles">forgotPwd</result>
		</action>

		<action name="recoverPwd" method="recoverPwd" class="pt.ual.mgi.action.UserProfileAction">
			<result name="success" type="tiles">login</result>
		</action>
		
	</package>

	<package name="/app/open/profile" extends="struts-default">
		
		<result-types>
			<result-type name="tiles"
			class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		
		
		<action name="show" class="pt.ual.mgi.action.UserProfileAction">
			<result name="success" type="tiles">mgi</result>
		</action>
		
		<action name="update" method="update" class="pt.ual.mgi.action.UserProfileAction">
			<result name="success" type="tiles">mgi</result>
		</action>
		
	</package>

</struts>