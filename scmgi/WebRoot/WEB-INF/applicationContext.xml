<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/util
    http://www.springframework.org/schema/util/spring-util-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<util:properties location="classpath:email.properties" id="emailProperties" />
	<context:property-placeholder properties-ref="emailProperties"  />

	<util:properties location="classpath:restserver.properties" id="restServerProperties" />
	<context:property-placeholder properties-ref="restServerProperties"  />
	
	<util:properties location="classpath:ldap.properties" id="ldapProperties" />
	<context:property-placeholder properties-ref="ldapProperties"  />

	<context:component-scan base-package="pt.ual.mgi" />

</beans>